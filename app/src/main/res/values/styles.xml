<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="homeAsUpIndicator">@drawable/selector_ic_back</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FullScreen" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="TabText">
        <item name="android:textSize">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="textWhite12DP">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="textWhite16DP">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/themeColor</item>
    </style>

    <style name="textBlack15DPPadding10">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/themeColor</item>
        <item name="android:padding">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textThemeColor12DP">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/themeColor</item>
    </style>
    <style name="textBlackColor12DP">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textBlack15DP">
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@color/themeColor</item>
    </style>
    <style name="textBlack15DP1">
        <item name="android:textSize">15dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textWhite30DPMonospace">
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:shadowColor">@color/black</item>
    </style>

    <style name="textWhite18DP">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="textThemeColor12DP.padding">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>




    <style name="bottomView">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="textBlack15DPBold">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textBlack18DP">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="textBlack20DP">
        <item name="android:textSize">20dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textWhiteSelector12DP">
        <item name="android:textColor">@color/selector_text</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="textBlackSelector12DP">
        <item name="android:textColor">@color/selector_text1</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="textWhiteSelector15DP">
        <item name="android:textColor">@color/selector_text</item>
        <item name="android:textSize">15sp</item>
        <item name="android:drawablePadding">10dp</item>
    </style>
    <style name="textGraySelector14DP">
        <item name="android:textColor">@color/selector_text2</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawablePadding">10dp</item>
    </style>


</resources>